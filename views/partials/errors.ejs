<% if (Array.isArray(error) && error.length> 0) { %>
  <div class='position-fixed bottom-0 end-0 p-3' style='z-index: 9999'>
    <% error.forEach(e=> {
      let message = '';
      let variant = 'danger';

      switch (e) {
      case 'invalidcredu':
      message = '❌ Error: Invalid Username';
      break;
      case 'invalidcredp':
      message = '❌ Error: Invalid Password';
      break;
      case 'duplicate':
      message = '⚠️ Error: User already exists';
      variant = 'warning';
      break;
      case 'invalidcredc':
      message = '❌ Error: Password minimum 3 characters';
      break;

      case 'votesuccess':
      message = '✅ Your vote has been recorded!';
      variant = 'success';
      break;
      case 'votefail':
      message = '❌ Failed to record vote. Please try again.';
      break;

      default:
      message = '⚠️ An unknown error occurred.';
      }
      %>
      <div class='toast align-items-center text-bg-<%= variant %> border-0 show' role='alert' data-bs-delay='5000'
        data-bs-autohide='true'>
        <div class='d-flex'>
          <div class='toast-body'>
            <%= message %>
          </div>
          <button type='button' class='btn-close <%= variant === ' warning' ? '' : 'btn-close-white' %> me-2 m-auto'
            data-bs-dismiss='toast'></button>
        </div>
      </div>
      <% }); %>
  </div>
  <% } %>

    <script src='/js/autoHide.js'></script>