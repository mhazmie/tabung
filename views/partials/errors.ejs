<% if (Array.isArray(error) && error.length> 0) { %>
  <div class='toast-stack position-fixed top-0 start-50 translate-middle-x p-3' style='z-index: 9999'>
    <% error.forEach(e=> {
      let message = '';
      let variant = 'danger';

      switch (e) {
      case 'invalidcredu':
      message = '❌ Error: Invalid Username';
      break;
      case 'invalidcredp':
      message = '❌ Error: Invalid Password';
      break;
      case 'duplicate':
      message = '⚠️ Error: User already exists';
      variant = 'warning';
      break;
      case 'invalidcredc':
      message = '❌ Error: Password minimum 3 characters';
      break;

      case 'votesuccess':
      message = '✅ Your vote has been recorded!';
      variant = 'success';
      break;
      case 'votenotify':
      message = 'Wait for admin to verify your vote.';
      variant = 'info';
      break;
      case 'votefail':
      message = '❌ Failed to record vote. Please try again.';
      break;
      case 'verifyok':
      message = '✅ Vote has been verified!';
      variant = 'success';
      break;
      case 'verifyfail':
      message = '❌ Failed to verify vote.';
      break;

      default:
      message = '⚠️ An unknown error occurred.';
      }
      %>
      <div class='toast align-items-center text-bg-<%= variant %> border-0 <% if (e !== "votenotify") { %>show<% } %>'
        id='toast-<%= e %>' role='alert' data-bs-delay='5000' data-bs-autohide='true'>
        <div class='d-flex'>
          <div class='toast-body'>
            <%= message %>
          </div>
          <button type='button' class='btn-close <%= variant === ' warning' ? '' : 'btn-close-white' %> me-2 m-auto'
            data-bs-dismiss='toast'></button>
        </div>
      </div>

      <% }); %>
  </div>
  <% } %>

    <script src='/js/autoHide.js'></script>