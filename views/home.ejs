<%- include('partials/head') %>

  <body>
    <%- include('partials/header') %>

      <main class="container my-4">
        <h1 class="mb-4">Papan Kenyataan</h1>
        <div class="card text-white bg-dark mb-4">
          <div class="card-header">
            <h4>Badminton Mingguwan</h4>
          </div>
          <div class="card-body">
            <p class="card-text">
              📍 Location: <strong>
                <%= notice.notice_location %>
              </strong><br>
              🏸 Court: <strong>
                <%= notice.notice_court %>
              </strong><br>
              👥 Players: <strong>
                <%= notice.notice_players %>
              </strong><br>
              📅 Date & Time: <strong>
                <%= new Date(notice.notice_datetime).toLocaleString('en-GB', { timeZone: 'Asia/Kuala_Lumpur' ,
                  hour: 'numeric' , minute: '2-digit' , hour12: true, day: '2-digit' , month: '2-digit' ,
                  year: 'numeric' }) %> (<%= notice.notice_duration %> hrs)
              </strong>
            </p>
          </div>
        </div>
      </main>
  </body>