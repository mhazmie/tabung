<%- include('partials/head') %>

  <body>
    <%- include('partials/errors') %>
      <%- include('partials/header') %>

        <main class='container my-4'>
          <h1 class='text-center mb-4'>Papan Kenyataan</h1>

          <div class='card text-white bg-dark mx-auto' style='max-width: 600px;'>
            <div class='card-header text-center py-2'>
              <h5 class='mb-0'>Badminton Mingguan</h5>
            </div>

            <div class='card-body py-3 px-4'>
              <div class='row mb-2'>
                <div class='col-5 text-end'>
                  üìç <strong>Location:</strong>
                </div>
                <div class='col-7 text-start'>
                  <%= notice.notice_location %>
                </div>
              </div>

              <div class='row mb-2'>
                <div class='col-5 text-end'>
                  üè∏ <strong>Court:</strong>
                </div>
                <div class='col-7 text-start'>
                  <%= notice.notice_court %>
                </div>
              </div>

              <div class='row mb-2'>
                <div class='col-5 text-end'>
                  üë• <strong>Players:</strong>
                </div>
                <div class='col-7 text-start'>
                  <% if (votecount> 0) { %>
                    <%= votecount %> Player(s)
                      <button class="btn btn-sm btn-outline-light ms-2" type="button" data-bs-toggle="modal"
                        data-bs-target="#playersModal">
                        Show
                      </button>

                      <%- include('partials/players') %>

                        <% } else { %>
                          <em>No players joined yet</em>
                          <% } %>
                </div>
              </div>

              <div class='row'>
                <div class='col-5 text-end'>
                  üìÖ <strong>Date & Time:</strong>
                </div>
                <div class='col-7 text-start'>
                  <%= new Date(notice.notice_datetime).toLocaleString('en-GB', { weekday: 'long' }) %>,
                    <%= new Date(notice.notice_datetime).toLocaleString('en-GB', { hour: 'numeric' , hour12: true,
                      day: '2-digit' , month: 'short' }) %> (<%= notice.notice_duration %>
                        hrs)
                </div>
              </div>

              <div class="text-center mt-4">
                <button class="btn btn-outline-light" data-bs-toggle="modal" data-bs-target="#voteModal">
                  Vote to Join
                </button>
              </div>
              <%- include('partials/vote') %>
            </div>
          </div>
        </main>

  </body>